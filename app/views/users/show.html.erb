<% provide(:title, @user.name) %>
User name: <%= @user.name %><br>
User email: <%= @user.email %><br>
Created at: <%= @user.created_at %><br>
Updated_at: <%= @user.updated_at %><br>
Time now: <%= Time.now %>
<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
        <%= @user.email %>
      </h1>
    </section>
  </aside>
</div>